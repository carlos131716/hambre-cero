<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white shadow-lg rounded-lg p-8 w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-teal-500 mb-6">Editar Plato</h1>
    
    <%= form_with(model: @plato, local: true, html: { class: "space-y-4" }) do |form| %>
      <div class="field">
        <%= form.label :name_comida, "Nombre del Plato", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name_comida, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-teal-500 focus:border-teal-500 sm:text-sm", placeholder: "Ejemplo: Arroz con Pollo" %>
      </div>

      <div class="actions">
        <%= form.submit "Guardar Cambios", class: "w-full bg-teal-500 hover:bg-teal-600 text-white font-bold py-2 px-4 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-teal-400 focus:ring-offset-2 sm:text-sm" %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "Cancelar", platos_path, class: "text-sm text-gray-600 hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
