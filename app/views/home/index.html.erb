<h1 class="text-3xl font-bold text-center mb-8">Menús disponibles</h1>

<ul class="space-y-4">
  <% @menus.each do |menu| %>
    <li class="bg-white shadow-md rounded-lg p-4 flex justify-between items-center">
      <span class="text-lg font-semibold">Menú de <%= menu.user.username %></span> <!-- Nombre del donador -->
      
      <%= link_to 'Ver Menú', home_path(menu), class: 'bg-blue-500 text-white py-2 px-4 rounded-full hover:bg-blue-600 transition' %> <!-- Botón para ver el menú -->
    </li>
  <% end %>
</ul>
